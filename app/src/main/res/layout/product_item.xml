<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_10sdp"
    >

        <LinearLayout
            android:id="@+id/llProduct"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_2sdp"
                >
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:id="@+id/rr_super_item"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:orientation="vertical"
                    android:background="@drawable/ic_card_image"
                    >

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/ivProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                    </ImageView>
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textColor="@color/white"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_purple_bg_5"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="$ 20" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:layout_alignParentLeft="true"
                            android:singleLine="true"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special gift card" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCompare"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/green_bg_5"
                android:textAllCaps="false"
                android:text="@string/compare"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToCart"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/gray_bg_5"
                android:textAllCaps="false"
                android:text="@string/add_to_cart"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnViewCart"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/gray_bg_5"
                android:textAllCaps="false"
                android:text="@string/view_cart"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                />

        </LinearLayout>

</RelativeLayout>