<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/light_gray_border"
    android:id="@+id/llAddress"
    >
    <TextView
        android:id="@+id/tvName"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pricekila" />
    <TextView
        android:id="@+id/tvAddress"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/neutral_gray"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_regular"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3711 Spring Hill Rd undefined Tallahassee,\n Nevada 52874 United States" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/neutral_gray"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_regular"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+9145894549454"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg_5"
            android:textAllCaps="false"
            android:text="@string/edit"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            />
    </LinearLayout>


</LinearLayout>
    </RelativeLayout>
</layout>